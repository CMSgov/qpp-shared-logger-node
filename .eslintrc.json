{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "semi": ["error", "always"],
        "prettier/prettier": "error",
        "no-unused-vars": "warn"
    },
    "globals": {
        "after": false,
        "afterEach": false,
        "before": false,
        "beforeEach": false,
        "context": false,
        "describe": false,
        "it": false
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser"
}
